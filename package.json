{
  "name": "log-plus",
  "displayName": "Log Plus",
  "description": "Adds helpful features to navigate log files",
  "version": "3.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/al4nnw/log-plus.git"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Visualization"
  ],
  "publisher": "a4nnw",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "logViewer.selectRule",
        "title": "Select Rule"
      },
      {
        "command": "logViewer.exportRules",
        "title": "Export Rules"
      },
      {
        "command": "logViewer.importRules",
        "title": "Import Rules"
      },
      {
        "command": "logViewer.revertChanges",
        "title": "Revert Changes"
      },
      {
        "command": "logViewer.firstOccurrence",
        "title": "First"
      },
      {
        "command": "logViewer.lastOccurrence",
        "title": "Last"
      },
      {
        "command": "logViewer.nearestOccurrence",
        "title": "Nearest"
      },
      {
        "command": "logViewer.nextOccurrence",
        "title": "Next"
      },
      {
        "command": "logViewer.previousOccurrence",
        "title": "Previous"
      },
      {
        "command": "logViewer.addRule",
        "title": "Add New Rule",
        "icon": "$(search)"
      },
      {
        "command": "logViewer.changeColor",
        "title": "Change Color",
        "icon": "$(paintcan)"
      },
      {
        "command": "logViewer.addSelectedText",
        "title": "Add Selected Text as Rule",
        "icon": "$(text-size)"
      },
      {
        "command": "logViewer.refreshRules",
        "title": "Refresh Rule Counts",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "logViewer",
          "title": "Log Viewer",
          "icon": "resources/activity-bar.svg"
        }
      ]
    },
    "views": {
      "logViewer": [
        {
          "id": "logViewer.rulesPanel",
          "name": "Searching"
        },
        {
          "id": "logViewer.navigation",
          "name": "Options"
        },
        {
          "id": "logViewer.sharePanel",
          "name": "SHARE"
        }
      ],
      "explorer": [
        {
          "id": "logViewer.ruleManager",
          "name": "Log Rules"
        }
      ]
    },
    "menus": {
      "view/item/context": [],
      "view/title": [
        {
          "command": "logViewer.addRule",
          "when": "view == logViewer.rulesPanel",
          "group": "navigation"
        },
        {
          "command": "logViewer.refreshRules",
          "when": "view == logViewer.rulesPanel",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "logViewer.addSelectedText",
        "key": "ctrl+alt+f",
        "when": "editorTextFocus"
      }
    ]
  },
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "icon": "resources/log-viewer-icon.png",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "patch-version": "npm version patch && git push --follow-tags"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.0"
  },
  "dependencies": {}
}